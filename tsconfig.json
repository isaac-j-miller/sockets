{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2019",
    "jsx": "react",
    "strict": true,
    "allowJs": false,
    "sourceMap": true,
    "pretty": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "common/*": ["./packages/common/src/*"],
      "host/*": ["./packages/host/src/*"],
      "build/*": ["./packages/build/src/*"],
      "web/*": ["./packages/web/src/*"],
      "yeoman-template-generator/*": ["./packages/yeoman-template-generator/src/*"],
      "yeoman/*": ["./packages/yeoman/*"],
      "yeoman-template-generator": ["./packages/yeoman-template-generator/src/index.ts"]
    },
    "lib": ["dom", "scripthost", "es2019"],
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["**/dist/**", "**/node_modules/**", "**/*.ts.template"]
}
